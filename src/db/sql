avs
CREATE TABLE IF NOT EXISTS av.AVS(
  id INT NOT NULL AUTO_INCREMENT,
  pn VARCHAR(255) UNIQUE,
  fetched_time DATETIME,
  PRIMARY KEY (id)
)

magnets
CREATE TABLE IF NOT EXISTS av.MAGNETS(
  id INT NOT NULL,
  pn INT NOT NULL,
  magnet VARCHAR(255),
  torrent VARCHAR(255),
  site INT NOT NULL,
  deadReport INT NOT NULL, /* default 0*/
  PRIMARY KEY (id),
  FOREIGN KEY (pn) REFERENCES av.AVS(id)
)

sites
CREATE TABLE IF NOT EXISTS av.SITES(
  id INT NOT NULL,
  title VARCHAR(255),
  url VARCHAR(255),
  PRIMARY KEY (id)
)